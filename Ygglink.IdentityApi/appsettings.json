{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "OpenApi": {
        "Endpoint": {
            "Name": "Ygglink.API V1"
        },
        "Document": {
            "Description": "The Identity Microservice HTTP API. This is a simple identity CRUD registration entrypoint",
            "Title": "Ygglink - Identity HTTP API",
            "Version": "v1"
        },
        "Auth": {
            "ClientId": "identityswaggerui",
            "AppName": "Identity Service Swagger UI"
        }
    },
    "Jwt": {
        "Key": "Your32CharacterMinimumSigningKeyHere",
        "Issuer": "https://localhost:8020",
        "Audience": "MyApp",
        "ExpireMinutes": 60
    },
    "Email": {
        "SenderEmail": "myapp@noreply.com",
        "Sender": "MyApp",
        "Host": "papercut",
        "Port": 25
    }
}
