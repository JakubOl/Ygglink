{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Jwt": {
        "Key": "Your32CharacterMinimumSigningKeyHere",
        "Issuer": "http://localhost:8080",
        "Audience": "http://localhost:3000"
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "identityapi-route": {
                "ClusterId": "identityapi-cluster",
                "AuthorizationPolicy": "anonymous",
                //"RateLimiterPolicy": "rateLimitingPolicy",
                //"CorsPolicy": "frontCorsPolicy",
                "Timeout": "00:01:00",
                "Match": {
                    "Path": "/api/v1/account/{**catch-all}"
                },
                "Transforms": [
                    { "PathPattern": "/api/v1/account/{**catch-all}" }
                ]
            },
            //"profileapi-route": {
            //    "ClusterId": "profileapi-cluster",
            //    "AuthorizationPolicy": "anonymous",
            //    "RateLimiterPolicy": "rateLimitingPolicy",
            //    "OutputCachePolicy": "outputCachePolicy",
            //    "CorsPolicy": "frontCorsPolicy",
            //    "Timeout": "00:01:00",
            //    "Match": {
            //        "Path": "/profile/{**catch-all}"
            //    },
            //    "Transforms": [
            //        { "PathPattern": "/api/v1/profile/{**catch-all}" }
            //    ]
            //}
        },
        "Clusters": {
            "identityapi-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://ygglink-identityapi",
                        "Health": "http://ygglink-identityapi/health"
                    }
                },
                "HttpRequest": {
                    "Timeout": "00:00:30"
                },
                "HttpClient": {
                    "ResponseTimeout": "00:00:30"
                },
                "HealthCheck": {
                    "Enabled": true,
                    "Interval": "00:00:10",
                    "Timeout": "00:00:05",
                    "Policy": "ConsecutiveFailures",
                    "ConsecutiveFailures": 3,
                    "Path": "/health"
                },
                "LoadBalancingPolicy": "RoundRobin",
                "RetryPolicy": {
                    "Count": 3,
                    "Backoff": "00:00:01"
                },
                "CircuitBreaker": {
                    "MaxConcurrentRequests": 100,
                    "MaxConcurrentRetries": 50,
                    "BreakDuration": "00:01:00"
                }
            },
            //"profileapi-cluster": {
            //    "Destinations": {
