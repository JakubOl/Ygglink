{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "OpenApi": {
        "Endpoint": {
            "Name": "Ygglink.TaskApi V1"
        },
        "Document": {
            "Description": "The Task Microservice HTTP API. This is a simple identity CRUD registration entrypoint",
            "Title": "Ygglink - Task HTTP API",
            "Version": "v1"
        },
        "Auth": {
            "ClientId": "taskswaggerui",
            "AppName": "Task Service Swagger UI"
        }
    },
    "Jwt": {
        "Key": "Your32CharacterMinimumSigningKeyHere",
        "Issuer": "http://localhost:8080",
        "Audience": "http://localhost:3000",
        "ExpireMinutes": 60
    },
    "Email": {
        "SenderEmail": "myapp@noreply.com",
        "Sender": "MyApp",
        "Host": "papercut",
        "Port": 25
    }
}